<Window x:Class="UI.NewProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="150" Width="300" ResizeMode="NoResize">
    <Grid Margin="0,0,0,5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Name="Prompt" VerticalAlignment="Center" FontSize="13" TextAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="5,0,0,0"/>
        <TextBox VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Text="{Binding Path=NewProfileName}"/>
        <Button Width="70" Grid.Row="1" Grid.Column="0" Click="Cancel">Cancel</Button>
        <Button Name="Button" Width="70" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" FontWeight="Bold" Margin="0,0,15,0" Click="ButtonClick"/>
    </Grid>
</Window>
